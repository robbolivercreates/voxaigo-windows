<Window x:Class="VoxAiGo.App.Views.SetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoxAiGo â€” Setup"
        Width="780" Height="540"
        MinWidth="780" MinHeight="540"
        MaxWidth="780" MaxHeight="540"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== LEFT PANEL ===== -->
        <Border Grid.Column="0" Background="#0D0D0D" BorderBrush="#1E1E1E" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="28,32,28,24">
                    <TextBlock Text="VoxAiGo" FontSize="22" FontWeight="Bold"
                               Foreground="#D4AF37" FontFamily="Segoe UI"/>
                    <TextBlock Text="Quick Setup" FontSize="11" Foreground="#555"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Step List -->
                <StackPanel Grid.Row="1" Margin="20,0,20,28">

                    <!-- Step 0: Sign In -->
                    <Border x:Name="StepBorder0" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot0" Width="24" Height="24" CornerRadius="12"
                                    Background="#D4AF37" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum0" Text="1" FontSize="11" FontWeight="Bold"
                                           Foreground="#0A0A0A" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel0" Text="Sign In" FontSize="13"
                                       Foreground="#E0E0E0" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 1: Microphone -->
                    <Border x:Name="StepBorder1" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot1" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum1" Text="2" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel1" Text="Microphone" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 2: Test Recording -->
                    <Border x:Name="StepBorder2" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot2" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum2" Text="3" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel2" Text="Test Recording" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 3: Modes -->
                    <Border x:Name="StepBorder3" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot3" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum3" Text="4" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel3" Text="AI Modes" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 4: Wake Word -->
                    <Border x:Name="StepBorder4" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot4" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum4" Text="5" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel4" Text="Voice Commands" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 5: Language -->
                    <Border x:Name="StepBorder5" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot5" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum5" Text="6" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel5" Text="Language" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 6: Ready -->
                    <Border x:Name="StepBorder6" CornerRadius="8" Padding="10,10" Margin="0,0,0,4"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="StepDot6" Width="24" Height="24" CornerRadius="12"
                                    Background="#333" VerticalAlignment="Center">
                                <TextBlock x:Name="StepNum6" Text="7" FontSize="11" FontWeight="Bold"
                                           Foreground="#888" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="StepLabel6" Text="You're Ready!" FontSize="13"
                                       Foreground="#555" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== RIGHT PANEL ===== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- STEP CONTENT -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0">
                <StackPanel>
                <!-- STEP 0: Sign In -->
                <Grid x:Name="Panel0" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Welcome to VoxAiGo" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="Sign in to enable AI transcription. Free accounts include 75 local transcriptions/month."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,28"/>

                        <!-- Google -->
                        <Button x:Name="GoogleBtn" Content="  Continue with Google"
                                Height="42" FontSize="13" Click="GoogleBtn_Click"
                                Style="{StaticResource OutlineButton}"
                                HorizontalAlignment="Stretch" Margin="0,0,0,12"/>

                        <!-- Divider -->
                        <Grid Margin="0,4,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Separator Grid.Column="0" Background="#333" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="  or  " Foreground="#555" FontSize="12"/>
                            <Separator Grid.Column="2" Background="#333" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Email/Password -->
                        <TextBlock Text="Email" FontSize="12" Foreground="#888" Margin="0,0,0,4"/>
                        <TextBox x:Name="EmailBox" Height="36" Margin="0,0,0,10"
                                 Style="{StaticResource DarkTextBox}"/>
                        <TextBlock Text="Password" FontSize="12" Foreground="#888" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PwdBox" Height="36" Margin="0,0,0,12"
                                     Style="{StaticResource DarkPasswordBox}"/>
                        <Button x:Name="SignInBtn" Content="Sign In" Height="38"
                                Style="{StaticResource GoldButton}" Click="SignInBtn_Click"
                                HorizontalAlignment="Stretch"/>

                        <TextBlock x:Name="AuthStatusText" Text="" FontSize="12"
                                   Foreground="#FF6666" Margin="0,10,0,0"
                                   TextWrapping="Wrap" HorizontalAlignment="Center"/>

                        <!-- Skip -->
                        <Button Content="Continue without account (local only)"
                                FontSize="11" Foreground="#555" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" Margin="0,16,0,0"
                                HorizontalAlignment="Center" Click="SkipAuthBtn_Click"/>
                    </StackPanel>
                </Grid>

                <!-- STEP 1: Microphone -->
                <Grid x:Name="Panel1" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Test Your Microphone" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="Make sure VoxAiGo can hear you clearly before recording."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,32"/>

                        <!-- Mic Level -->
                        <Border Background="#141414" CornerRadius="12" Padding="24,20" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock x:Name="MicStatusText" Text="Click the button to test your microphone"
                                           FontSize="13" Foreground="#888" TextAlignment="Center"
                                           TextWrapping="Wrap" Margin="0,0,0,16"/>
                                <ProgressBar x:Name="MicLevelBar" Height="8" Minimum="0" Maximum="1"
                                             Value="0" Margin="0,0,0,16"
                                             Foreground="#D4AF37" Background="#222"
                                             BorderThickness="0"/>
                                <Button x:Name="MicTestBtn" Content="Test Microphone" Height="38"
                                        Style="{StaticResource OutlineButton}" Click="MicTestBtn_Click"
                                        HorizontalAlignment="Center" MinWidth="160"/>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="MicPassedText" Text="âœ“ Microphone working! Speech detected."
                                   FontSize="13" Foreground="#00CC88" HorizontalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>

                <!-- STEP 2: Test Recording -->
                <Grid x:Name="Panel2" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Test Your First Recording" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="Hold Ctrl + Space, say something, then release. We'll transcribe it for you."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,32"/>

                        <!-- Shortcut display -->
                        <Border Background="#141414" CornerRadius="12" Padding="24,28" Margin="0,0,0,24">
                            <StackPanel HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <Border Background="#222" CornerRadius="6" Padding="12,8">
                                        <TextBlock Text="Ctrl" FontSize="18" FontWeight="Bold"
                                                   Foreground="#D4AF37" FontFamily="Segoe UI"/>
                                    </Border>
                                    <TextBlock Text=" + " FontSize="22" Foreground="#555"
                                               VerticalAlignment="Center" Margin="8,0"/>
                                    <Border Background="#222" CornerRadius="6" Padding="12,8">
                                        <TextBlock Text="Space" FontSize="18" FontWeight="Bold"
                                                   Foreground="#D4AF37" FontFamily="Segoe UI"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="Hold to record, release to transcribe" FontSize="12"
                                           Foreground="#555" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="RecordingWaitText"
                                   Text="Waiting for your first transcription..."
                                   FontSize="13" Foreground="#888" HorizontalAlignment="Center"/>

                        <Border x:Name="RecordingSuccessBorder" Visibility="Collapsed"
                                Background="#0D2B1A" CornerRadius="10" Padding="16,14" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="âœ“ Transcription received!" FontSize="13"
                                           Foreground="#00CC88" Margin="0,0,0,6"/>
                                <TextBlock x:Name="RecordingResultText" Text="" FontSize="12"
                                           Foreground="#CCC" TextWrapping="Wrap" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- STEP 3: AI Modes -->
                <Grid x:Name="Panel3" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Choose an AI Mode" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="VoxAiGo has 15 AI modes. Each transforms your voice into a different type of text. Click any mode to try it."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <UniformGrid Columns="3" Margin="0,0,0,12" x:Name="ModesGrid">
                            <!-- Populated in code-behind -->
                        </UniformGrid>

                        <TextBlock Text="You can change mode anytime in the main window."
                                   FontSize="11" Foreground="#444" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- STEP 4: Wake Word -->
                <Grid x:Name="Panel4" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Voice Commands" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="Say 'Hey Vox' followed by a command to switch modes or languages hands-free."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <Border Background="#141414" CornerRadius="12" Padding="24,20" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Example commands:" FontSize="12"
                                           Foreground="#888" Margin="0,0,0,12"/>
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock FontSize="13" TextWrapping="Wrap">
                                        <Run Foreground="#D4AF37" FontWeight="Bold">"Hey Vox, email"</Run>
                                        <Run Foreground="#888"> â†’ switches to Email mode</Run>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock FontSize="13" TextWrapping="Wrap">
                                        <Run Foreground="#D4AF37" FontWeight="Bold">"Hey Vox, portuguÃªs"</Run>
                                        <Run Foreground="#888"> â†’ switches to Portuguese</Run>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock FontSize="13" TextWrapping="Wrap">
                                        <Run Foreground="#D4AF37" FontWeight="Bold">"Hey Vox, next language"</Run>
                                        <Run Foreground="#888"> â†’ cycles to next language</Run>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="WakeWordStatusText"
                                   Text="Try it now: hold Ctrl+Space and say a wake word command."
                                   FontSize="13" Foreground="#888" HorizontalAlignment="Center"
                                   TextWrapping="Wrap" TextAlignment="Center"/>

                        <TextBlock x:Name="WakeWordSuccessText" Text="âœ“ Wake word command detected!"
                                   FontSize="13" Foreground="#00CC88" HorizontalAlignment="Center"
                                   Visibility="Collapsed" Margin="0,8,0,0"/>

                        <TextBlock Text="Requires Pro or Trial. You can enable it later in Settings."
                                   FontSize="11" Foreground="#444" TextAlignment="Center"
                                   Margin="0,16,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>

                <!-- STEP 5: Language -->
                <Grid x:Name="Panel5" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="Choose Your Language" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="VoxAiGo supports 30 languages. Click one to set it as your transcription language."
                                   FontSize="13" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <UniformGrid Columns="4" x:Name="LanguagesGrid" Margin="0,0,0,12">
                            <!-- Populated in code-behind -->
                        </UniformGrid>

                        <TextBlock Text="More languages available in the main window."
                                   FontSize="11" Foreground="#444" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- STEP 6: Ready -->
                <Grid x:Name="Panel6" Visibility="Collapsed" Margin="40,36,40,16">
                    <StackPanel>
                        <TextBlock Text="You're all set! ðŸŽ‰" FontSize="24" FontWeight="Bold"
                                   Foreground="#FFFFFF" Margin="0,0,0,6"/>
                        <TextBlock Text="Here's a quick cheat sheet to keep you productive."
                                   FontSize="13" Foreground="#888" Margin="0,0,0,24"/>

                        <Border Background="#141414" CornerRadius="12" Padding="24,20" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="SHORTCUTS" FontSize="10" FontWeight="Bold"
                                               Foreground="#D4AF37" Margin="0,0,0,12"/>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock FontSize="12" TextWrapping="Wrap">
                                            <Run Foreground="#CCC" FontWeight="SemiBold">Ctrl + Space (hold)</Run>
                                        </TextBlock>
                                        <TextBlock Text="Record and transcribe" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock FontSize="12" TextWrapping="Wrap">
                                            <Run Foreground="#CCC" FontWeight="SemiBold">Ctrl + Shift + R</Run>
                                        </TextBlock>
                                        <TextBlock Text="Conversation Reply mode" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock FontSize="12" TextWrapping="Wrap">
                                            <Run Foreground="#CCC" FontWeight="SemiBold">System Tray â†’ Settings</Run>
                                        </TextBlock>
                                        <TextBlock Text="Open main window" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="TIPS" FontSize="10" FontWeight="Bold"
                                               Foreground="#D4AF37" Margin="0,0,0,12"/>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="Wake Word" FontSize="12" Foreground="#CCC" FontWeight="SemiBold"/>
                                        <TextBlock Text="Say 'Hey Vox' to switch modes" FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="15 AI Modes" FontSize="12" Foreground="#CCC" FontWeight="SemiBold"/>
                                        <TextBlock Text="Email, Code, Tweet, Meeting..." FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="30 Languages" FontSize="12" Foreground="#CCC" FontWeight="SemiBold"/>
                                        <TextBlock Text="Switch language anytime" FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <TextBlock Text="VoxAiGo lives in your system tray. Press Ctrl+Space anywhere to start transcribing."
                                   FontSize="12" Foreground="#555" TextAlignment="Center"
                                   TextWrapping="Wrap" Margin="0,0,0,4"/>
                    </StackPanel>
                </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- ===== FOOTER ===== -->
            <Border Grid.Row="1" Background="#0D0D0D" BorderBrush="#1E1E1E"
                    BorderThickness="0,1,0,0" Padding="24,14">
                <Grid>
                    <Button x:Name="BackBtn" Content="â† Back" HorizontalAlignment="Left"
                            Style="{StaticResource OutlineButton}" Width="90" Height="36"
                            Click="BackBtn_Click" Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="SkipBtn" Content="Skip" HorizontalAlignment="Right"
                                Style="{StaticResource OutlineButton}" Width="80" Height="36"
                                Click="SkipBtn_Click" Margin="0,0,10,0" Visibility="Collapsed"/>
                        <Button x:Name="NextBtn" Content="Next â†’" HorizontalAlignment="Right"
                                Style="{StaticResource GoldButton}" Width="110" Height="36"
                                Click="NextBtn_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
