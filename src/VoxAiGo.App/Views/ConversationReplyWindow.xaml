<Window x:Class="VoxAiGo.App.Views.ConversationReplyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VoxAiGo.App.Controls"
        Title="VoxAiGo Conversation Reply" Height="200" Width="460"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ShowActivated="False" ResizeMode="NoResize">

    <Grid>
        <!-- Main Card -->
        <Border x:Name="MainCard" CornerRadius="24" Padding="0" BorderThickness="1.5">
            <Border.Background>
                <SolidColorBrush Color="#141414" Opacity="0.95"/>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#59FFFFFF" Offset="0"/>
                    <GradientStop Color="#00FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#26FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <!-- STATE 1: TRANSLATING — Globe + "Reading message..." + spinner -->
                <StackPanel x:Name="TranslatingState" Orientation="Horizontal" VerticalAlignment="Center"
                            Margin="24,20">
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                               Foreground="{StaticResource GoldPrimary}" VerticalAlignment="Center" Margin="0,0,14,0"/>
                    <TextBlock Text="Reading message..." FontSize="15" FontWeight="Medium"
                               Foreground="#D9FFFFFF" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                        <Ellipse x:Name="Dot1" Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                        <Ellipse x:Name="Dot2" Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                        <Ellipse x:Name="Dot3" Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- STATE 2: READY — Language badges + translation + CTA + countdown -->
                <Grid x:Name="ReadyState" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                    </Grid.RowDefinitions>

                    <!-- Header: from → to + dismiss -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,16,20,0">
                        <!-- From language badge -->
                        <Border Background="#1FF24040" BorderBrush="#48F24040" BorderThickness="1" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="FromCodeText" Text="JA" FontSize="11" FontWeight="Bold" Foreground="#F27359" Margin="0,0,4,0"/>
                                <TextBlock x:Name="FromNameText" Text="Japanese" FontSize="12" FontWeight="Medium" Foreground="#F2F27359"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="→" FontSize="11" FontWeight="Bold" Foreground="#59FFFFFF" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <!-- To language badge -->
                        <Border Background="#1F59E195" BorderBrush="#4859E195" BorderThickness="1" CornerRadius="6" Padding="10,5">
                            <TextBlock x:Name="ToNameText" Text="English" FontSize="12" FontWeight="Medium" Foreground="#F259E195"/>
                        </Border>

                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="10,0,0,0">
                            <!-- Dismiss button -->
                            <Border x:Name="DismissButton" Background="#14FFFFFF" CornerRadius="13" Width="26" Height="26" Cursor="Hand"
                                    MouseLeftButtonDown="DismissButton_Click" HorizontalAlignment="Right">
                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="10" FontWeight="Bold"
                                           Foreground="#66FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Translated text (scrollable) -->
                    <ScrollViewer Grid.Row="1" Margin="20,12,20,14" MaxHeight="220" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TranslationText" Text="Can you send me the report by Friday?"
                                   FontSize="16" Foreground="#F2FFFFFF" TextWrapping="Wrap" LineHeight="24"/>
                    </ScrollViewer>

                    <!-- Separator -->
                    <Rectangle Grid.Row="2" Height="1" Fill="#14FFFFFF"/>

                    <!-- CTA: Hold Ctrl+Space to reply in [language] -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="20,12,20,12">
                        <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                   Foreground="#66FFFFFF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Hold" FontSize="13" Foreground="#80FFFFFF" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <!-- Shortcut badge -->
                        <Border Background="#1FFFFFFF" CornerRadius="4" Padding="7,3" Margin="0,0,4,0"
                                BorderBrush="#1FFFFFFF" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ctrl" FontSize="12" FontWeight="Medium" Foreground="#E6FFFFFF"/>
                                <TextBlock Text="+" FontSize="12" Foreground="#80FFFFFF" Margin="2,0"/>
                                <TextBlock Text="Space" FontSize="12" FontWeight="Medium" Foreground="#E6FFFFFF"/>
                            </StackPanel>
                        </Border>
                        <TextBlock x:Name="ReplyCtaText" Text="to reply in Japanese" FontSize="13" Foreground="#80FFFFFF"
                                   VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Countdown bar -->
                    <Grid Grid.Row="4">
                        <Rectangle Fill="#0DFFFFFF"/>
                        <Rectangle x:Name="CountdownBar" Fill="{StaticResource GoldPrimary}" HorizontalAlignment="Left"/>
                    </Grid>
                </Grid>

                <!-- STATE 3: RECORDING — Pulsing mic + "Replying in [language]..." + waves -->
                <StackPanel x:Name="RecordingState" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="Collapsed" Margin="24,20">
                    <!-- Pulsing red mic circle -->
                    <Border x:Name="RecordingMicCircle" Background="#F24040" CornerRadius="18" Width="36" Height="36" Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#F24040" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                        <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="RecordingLanguageText" Text="Replying in Japanese..."
                                   FontSize="15" FontWeight="SemiBold" Foreground="#F2FFFFFF"/>
                        <controls:SoundWaveControl x:Name="RecordingWaves" AudioLevel="0" Width="80" Height="20"
                                                   Foreground="{StaticResource GoldPrimary}" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- STATE 4: PROCESSING — Sparkle + "Translating your reply..." + spinner -->
                <StackPanel x:Name="ProcessingState" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="Collapsed" Margin="24,20">
                    <TextBlock x:Name="ProcessingSparkle" Text="&#xE734;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                               Foreground="{StaticResource GoldPrimary}" VerticalAlignment="Center" Margin="0,0,14,0"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="ProcessingRotation" Angle="0"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="Translating your reply..." FontSize="15" FontWeight="Medium"
                               Foreground="#D9FFFFFF" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                        <Ellipse Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                        <Ellipse Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                        <Ellipse Width="6" Height="6" Fill="#80FFFFFF" Margin="2,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
