<UserControl x:Class="VoxAiGo.App.Controls.SoundWaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle x:Name="Bar1" Width="6" Height="10" Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Rectangle x:Name="Bar2" Width="6" Height="16" Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Rectangle x:Name="Bar3" Width="6" Height="24" Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Rectangle x:Name="Bar4" Width="6" Height="16" Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Rectangle x:Name="Bar5" Width="6" Height="10" Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Rectangle x:Name="Bar6" Width="6" Height="6"  Margin="2,0" RadiusX="3" RadiusY="3" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>
    </Grid>
</UserControl>
